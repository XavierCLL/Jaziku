# select the python version
if type -p python2 > /dev/null; then
	python_version="python2"
elif type -p python2.7 > /dev/null; then
    python_version="python2.7"
elif type -p python2.6 > /dev/null; then
    python_version="python2.6"
else
	python_version="python"
fi

# run Jaziku in Linux environment
#/usr/bin/env python2 -c "from jaziku import jaziku; jaziku.main()" "$@"
exec `echo $python_version` -c "from jaziku.utils.input_format_converters import ideamFormat2jazikuFormat; ideamFormat2jazikuFormat.main()" "$@"
